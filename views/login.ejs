<!DOCTYPE html>
<html lang="en" class="">

<head>
   <%- include('./partials/head.ejs'); %>
</head>

<body class=" flex flex-col h-screen">
   <%- include('./partials/header.ejs'); %>
      <section class=" flex-1 flex justify-center items-center bg-pink-50">
         <div class=" h-1/2 w-1/3  bg-white rounded-lg p-5 flex flex-col drop-shadow-lg animate-scaleUp">
            <h1 class="text-xl text-pink-700 self-center mb-10">Login</h1>
            <div class=" flex flex-1">
               <form action="/login" method="post" class="flex-1 flex  flex-col">

                  <div
                     class="mt-2 w-full flex items-center justify-center hover:scale-105 hover:drop-shadow-2xl transition-all ">
                     <label class="text-white bg-pink-700 p-3 rounded-l-lg w-24 text-center ">Email</label>
                     <input class="p-3 w-2/3 bg-pink-50 rounded-lg focus:outline-none" type="email"
                        placeholder="e.g. zpochet2@apple.com" name="email" id="email">
                  </div>

                  <div
                     class="mt-2 w-full flex items-center justify-center hover:scale-105 hover:drop-shadow-2xl transition-all ">
                     <label class="text-white bg-pink-700 p-3 rounded-l-lg w-24 text-center">Password</label>
                     <input class="p-3 w-2/3 bg-pink-50 rounded-lg focus:outline-none" type="password" name="password"
                        id="password" placeholder="mypassword">
                  </div>

                  <div class=" flex  flex-col items-center my-5">
                     <button type="submit"
                        class=" p-3 bg-pink-700 rounded-lg text-white w-24 hover:cursor-pointer hover:scale-105 hover:drop-shadow-lg transition-all">Login</button>
                     <div class="w-full border-b mt-5" />
                  </div>




                  <% if (message) { %>
                     <p id="msg2" class="text-red-600 text-lg animate-wiggle">
                        <%= message %>
                     </p>
                     <% } %>
               </form>
            </div>
         </div>
      </section>
      <%- include('./partials/footer.ejs'); %>
</body>

</html>